{
  "version": 2,
  "functions": {
    "api/**": {
      "runtime": "@vercel/python@4.3.0",
      "memory": 1024,
      "maxDuration": 10,
      "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
    }
  },
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/main.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}

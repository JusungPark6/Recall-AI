{
  "version": 2,
  "builds": [
    { "src": "api/**/*.py", "use": "@vercel/python", "config": { "runtime": "python3.9" } }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/main.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
